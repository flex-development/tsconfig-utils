{
  "name": "@flex-development/tsconfig-utils",
  "description": "Utilities for working with tsconfig files",
  "version": "3.0.0-beta.2",
  "keywords": [
    "paths",
    "programmatic",
    "tsconfig",
    "tsconfig-paths",
    "tsconfig.json",
    "typescript",
    "typescript-compiler",
    "typescript-program"
  ],
  "license": "BSD-3-Clause",
  "homepage": "https://github.com/flex-development/tsconfig-utils",
  "repository": "https://github.com/flex-development/tsconfig-utils.git",
  "bugs": "https://github.com/flex-development/tsconfig-utils/issues",
  "author": {
    "name": "Lexus Drumgold",
    "url": "https://github.com/unicornware"
  },
  "publishConfig": {
    "access": "public",
    "diff-dst-prefix": "tsconfig-utils",
    "diff-src-prefix": "tsconfig-utils",
    "directory": "./",
    "executableFiles": [],
    "node-options": null,
    "pack-destination": ".",
    "parseable": true,
    "prefer-dedupe": true,
    "provenance": true,
    "tag-version-prefix": ""
  },
  "type": "module",
  "files": [
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md",
    "dist"
  ],
  "exports": {
    ".": {
      "tsconfig-utils": "./src/index.mts",
      "default": "./dist/index.mjs"
    },
    "./package.json": "./package.json",
    "./*": {
      "tsconfig-utils": "./src/lib/*.mts",
      "default": "./dist/lib/*.mjs"
    }
  },
  "imports": {
    "#fixtures/tsconfigs/*.json": "./__fixtures__/tsconfigs/*.json",
    "#fixtures/*": "./__fixtures__/*.mts",
    "#interfaces/*": {
      "tsconfig-utils": "./src/interfaces/*.mts",
      "default": "./dist/interfaces/*.d.mts"
    },
    "#internal/fs": {
      "types": {
        "tsconfig-utils": "./src/internal/fs.d.mts"
      },
      "browser": {
        "tsconfig-utils": "./src/internal/fs.browser.mts",
        "default": "./dist/internal/fs.browser.mjs"
      },
      "node": {
        "tsconfig-utils": "./src/internal/fs.node.mts",
        "default": "./dist/internal/fs.node.mjs"
      },
      "default": "./dist/internal/fs.node.mjs"
    },
    "#internal/*": {
      "tsconfig-utils": "./src/internal/*.mts",
      "default": "./dist/internal/*.mjs"
    },
    "#lib/*": {
      "tsconfig-utils": "./src/lib/*.mts",
      "default": "./dist/lib/*.mjs"
    },
    "#tests/*": "./__tests__/*.mts",
    "#tsconfig": {
      "types": "./tsconfig.json.d.mts",
      "default": "./tsconfig.json"
    },
    "#tsconfig-strictest": "@tsconfig/strictest/tsconfig.json",
    "#types/*": {
      "tsconfig-utils": "./src/types/*.mts",
      "default": "./dist/types/*.d.mts"
    }
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "remarkConfig": {
    "plugins": [
      "@flex-development/remark-preset"
    ]
  },
  "scripts": {
    "build": "yarn clean:build && tsc -p tsconfig.build.json --noEmit false && trash ./dist/{interfaces,types}/*.mjs || exit 0 && trash ./dist/internal/*.d.mts || exit 0",
    "check:ci": "yarn dedupe --check && yarn check:format && yarn check:lint && yarn check:spelling && yarn typecheck && yarn check:types && yarn test:cov && yarn pack && yarn check:types:build && attw package.tgz && yarn clean:pack",
    "check:format": "dprint check --incremental=false",
    "check:lint": "eslint --exit-on-fatal-error --max-warnings 0 .",
    "check:spelling": "cspell lint --color --no-progress --relative $@ \"**\"",
    "check:types": "tsc -p tsconfig.json",
    "check:types:attw": "yarn pack && attw package.tgz; yarn clean:pack",
    "check:types:build": "tsc -p tsconfig.build.json",
    "check:upgrades": "yarn upgrade-interactive",
    "clean:build": "trash \"./{dist,*.tgz}\" || exit 0",
    "clean:modules": "trash ./.yarn/{cache,*.gz} ./node_modules",
    "clean:pack": "trash \"./*.tgz\"",
    "clean:test": "trash ./coverage && trash __tests__/reports",
    "codecov": "yarn test:cov && yarn test:cov:upload",
    "codecov:validate": "cat .codecov.yml | curl --data-binary @- https://codecov.io/validate",
    "commitlint": "commitlint -V",
    "fix:cg": "yarn fix:format && yarn fix:lint",
    "fix:dedupe": "yarn dedupe --strategy=highest",
    "fix:format": "dprint fmt",
    "fix:lint": "yarn check:lint --cache --fix",
    "postinstall": "[ -f ./.git ] && [ -f ./node_modules/.bin/husky ] && chmod +x .husky/_/* && husky || exit 0",
    "postpack": "toggle-scripts +postinstall",
    "postpublish": "toggle-scripts +prepack",
    "prepack": "toggle-scripts -postinstall && yarn build",
    "prepublishOnly": "toggle-scripts -prepack",
    "release": "bash ./scripts/release.sh",
    "remark": "remark .",
    "test": "yarn clean:build; vitest run",
    "test:cov": "yarn test --coverage",
    "test:cov:reports": "yarn test:cov --merge-reports --mode=reports",
    "test:cov:ui": "yarn test:ui --coverage",
    "test:cov:upload": "./codecov -t $CODECOV_TOKEN -f ./coverage/lcov.info",
    "test:reports": "yarn test --merge-reports --mode=reports",
    "test:ui": "cross-env VITEST_UI=1 vitest --ui",
    "typecheck": "yarn test --typecheck --mode=typecheck",
    "typecheck:ui": "yarn test:ui --typecheck --mode=typecheck"
  },
  "dependencies": {
    "@flex-development/fst-util-from-fs": "1.0.0-beta.1",
    "@flex-development/mlly": "1.0.0-beta.7",
    "@flex-development/pathe": "4.0.2",
    "@flex-development/tsconfig-types": "5.1.0",
    "@flex-development/tutils": "6.0.0-alpha.25",
    "@flex-development/when": "1.0.0",
    "devlop": "1.1.0",
    "json5": "2.2.3",
    "strip-bom": "5.0.0",
    "strip-json-comments": "5.0.3"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "0.18.2",
    "@commitlint/cli": "20.4.1",
    "@commitlint/types": "20.4.0",
    "@edge-runtime/vm": "5.0.0",
    "@flex-development/commitlint-config": "1.0.1",
    "@flex-development/eslint-config": "1.1.1",
    "@flex-development/fst": "1.0.0",
    "@flex-development/grease": "3.0.0-alpha.9",
    "@flex-development/is-builtin": "3.2.0",
    "@flex-development/pkg-types": "4.1.0",
    "@flex-development/remark-preset": "1.0.0",
    "@tsconfig/strictest": "2.0.8",
    "@types/chai": "5.2.3",
    "@types/concat-stream": "2.0.3",
    "@types/is-ci": "3.0.4",
    "@types/node-notifier": "8.0.5",
    "@vates/toggle-scripts": "1.0.0",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/ui": "4.0.18",
    "concat-stream": "2.0.0",
    "cross-env": "10.1.0",
    "cspell": "9.6.4",
    "dprint": "0.51.1",
    "editorconfig": "3.0.1",
    "eslint": "9.39.2",
    "growl": "1.10.5",
    "husky": "9.1.7",
    "is-ci": "4.1.0",
    "node-notifier": "10.0.1",
    "remark": "15.0.1",
    "remark-cli": "12.0.1",
    "sh-syntax": "0.5.8",
    "trash-cli": "7.2.0",
    "typescript": "5.9.3",
    "unified": "11.0.5",
    "vfile": "6.0.3",
    "vitest": "4.0.18"
  },
  "packageManager": "yarn@4.12.0",
  "sideEffects": false
}
